<style>
.ba-section {
  padding: 60px 20px;
}

.ba-wrapper {
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
  height: {{ section.settings.desktop_height }}px;
  overflow: hidden;
  border-radius: 16px;
  background: #f5f5f5;
}

/* Images */
.ba-before img,
.ba-after img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Before */
.ba-before {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* After (clipped) */
.ba-after {
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  overflow: hidden;
  z-index: 2;
}

/* Slider line */
.ba-slider {
  position: absolute;
  top: 0;
  left: 50%;
  width: 4px;
  height: 100%;
  background: #fff;
  cursor: ew-resize;
  z-index: 5;
}

/* Handle */
.ba-handle {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 52px;
  height: 52px;
  background: #fff;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 4px 14px rgba(0,0,0,.3);
}

/* Labels */
.ba-label {
  position: absolute;
  bottom: 20px;
  padding: 6px 14px;
  background: rgba(0,0,0,.65);
  color: #fff;
  font-size: 14px;
  border-radius: 20px;
  z-index: 4;
}

.ba-label.before {
  left: 20px;
}

.ba-label.after {
  right: 20px;
}

/* Mobile */
@media (max-width: 768px) {
  .ba-wrapper {
    height: {{ section.settings.mobile_height }}px;
  }
}
</style>

<!-- BEFORE -->
<div class="ba-before">
  {% if section.settings.before_image %}
    <img
      src="{{ section.settings.before_image | image_url: width: 1600 }}"
      alt="Before image"
      width="{{ section.settings.before_image.width }}"
      height="{{ section.settings.before_image.height }}"
      loading="lazy">
  {% endif %}
</div>

<!-- AFTER -->
<div class="ba-after">
  {% if section.settings.after_image %}
    <img
      src="{{ section.settings.after_image | image_url: width: 1600 }}"
      alt="After image"
      width="{{ section.settings.after_image.width }}"
      height="{{ section.settings.after_image.height }}"
      loading="lazy">
  {% endif %}
</div>


<script>
document.addEventListener("DOMContentLoaded", function () {
  const wrapper = document.getElementById("ba-{{ section.id }}");
  if (!wrapper) return;

  const after = wrapper.querySelector(".ba-after");
  const slider = wrapper.querySelector(".ba-slider");

  let dragging = false;

  function moveSlider(clientX) {
    const rect = wrapper.getBoundingClientRect();
    let x = Math.max(0, Math.min(clientX - rect.left, rect.width));
    let percent = (x / rect.width) * 100;

    after.style.width = percent + "%";
    slider.style.left = percent + "%";
  }

  slider.addEventListener("mousedown", () => dragging = true);
  window.addEventListener("mouseup", () => dragging = false);
  window.addEventListener("mousemove", e => dragging && moveSlider(e.clientX));

  slider.addEventListener("touchstart", () => dragging = true, { passive: true });
  window.addEventListener("touchend", () => dragging = false);
  window.addEventListener("touchmove", e => dragging && moveSlider(e.touches[0].clientX), { passive: true });

});
</script>

{% schema %}
{
  "name": "Before After Page Slider",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "before_image",
      "label": "Before Image (First Screenshot)"
    },
    {
      "type": "image_picker",
      "id": "after_image",
      "label": "After Image (Second Screenshot)"
    },
    {
      "type": "text",
      "id": "before_label",
      "label": "Before Label",
      "default": "Before"
    },
    {
      "type": "text",
      "id": "after_label",
      "label": "After Label",
      "default": "After"
    },
    {
      "type": "number",
      "id": "desktop_height",
      "label": "Desktop Height (px)",
      "default": 650
    },
    {
      "type": "number",
      "id": "mobile_height",
      "label": "Mobile Height (px)",
      "default": 420
    }
  ],
  "presets": [
    {
      "name": "Before / After Slider",
      "category": "Media"
    }
  ]
}
{% endschema %}
