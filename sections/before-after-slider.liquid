<section class="ba-section">

  <!-- BEFORE -->
  <div class="ba-row">
    <div class="ba-image">
      {% if section.settings.before_image %}
        <img
          src="{{ section.settings.before_image | image_url: width: 1000 }}"
          width="{{ section.settings.before_image.width }}"
          height="{{ section.settings.before_image.height }}"
          alt="Before image"
          loading="lazy"
        >
      {% endif %}
    </div>

    <div class="ba-content">
      <span class="ba-tag">{{ section.settings.before_label }}</span>
      <h2>{{ section.settings.before_heading }}</h2>
      {{ section.settings.before_text }}
    </div>
  </div>

  <!-- AFTER -->
  <div class="ba-row">
    <div class="ba-image">
      {% if section.settings.after_image %}
        <img
          src="{{ section.settings.after_image | image_url: width: 1000 }}"
          width="{{ section.settings.after_image.width }}"
          height="{{ section.settings.after_image.height }}"
          alt="After image"
          loading="lazy"
        >
      {% endif %}
    </div>

    <div class="ba-content">
      <span class="ba-tag">{{ section.settings.after_label }}</span>
      <h2>{{ section.settings.after_heading }}</h2>
      {{ section.settings.after_text }}
    </div>
  </div>

</section>

<style>
.ba-section {
  max-width: 1200px;
  margin: auto;
  padding: 60px 20px;
}

.ba-row {
  display: flex;
  align-items: center;
  gap: 50px;
  margin-bottom: 80px;
}

.ba-image img {
  width: 100%;
  max-width: 520px;
  border-radius: 12px;
}

.ba-content {
  max-width: 520px;
}

.ba-tag {
  display: inline-block;
  font-size: 12px;
  font-weight: 600;
  letter-spacing: 1px;
  margin-bottom: 10px;
  text-transform: uppercase;
}

.ba-content h2 {
  font-size: 32px;
  margin-bottom: 15px;
}

.ba-content p {
  line-height: 1.6;
}

@media (max-width: 768px) {
  .ba-row {
    flex-direction: column;
    text-align: center;
  }
}
</style>

{% schema %}
{
  "name": "Before After – Two Column",
  "settings": [
    {
      "type": "image_picker",
      "id": "before_image",
      "label": "Before Image"
    },
    {
      "type": "text",
      "id": "before_label",
      "label": "Before Label",
      "default": "BEFORE"
    },
    {
      "type": "text",
      "id": "before_heading",
      "label": "Before Heading",
      "default": "Experience the perfect mix."
    },
    {
      "type": "richtext",
      "id": "before_text",
      "label": "Before Text",
      "default": "<p>• Live music<br>• Festival ready</p>"
    },

    {
      "type": "image_picker",
      "id": "after_image",
      "label": "After Image"
    },
    {
      "type": "text",
      "id": "after_label",
      "label": "After Label",
      "default": "AFTER"
    },
    {
      "type": "text",
      "id": "after_heading",
      "label": "After Heading",
      "default": "Protect your hearing."
    },
    {
      "type": "richtext",
      "id": "after_text",
      "label": "After Text",
      "default": "<p>• Crystal clear sound<br>• Comfortable fit</p>"
    }
  ],
  "presets": [
    {
      "name": "Before After – Two Column"
    }
  ]
}
{% endschema %}
